{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}