{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "lib": ["ESNext"],
      "moduleResolution": "NodeNext",
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "outDir": "dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  